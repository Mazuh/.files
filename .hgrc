[ui]
username = Marcell Guilherme <marcell@example.com>
ignore = ~/.hgignore

[diff]
git=True

[extensions]
hgext.churn=
hgext.pager=
convert=
color=
rebase=
mq=
shelve=
transplant=
purge=

[alias]
jira = !$HG up `$HG branches | grep $1 | cut -d ' ' -f1`
jiracommit = !$HG commit -m "`$HG branch | cut -d'/' -f2`: $1"
jiraci = jiracommit
show = !$HG log -r $1 -p
